{
  "id": null,
  "title": "IoT Temperature Monitoring",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Temperature (Celsius)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "temperature_celsius",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Temperature (Fahrenheit)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "temperature_fahrenheit",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "fahrenheit"
        }
      }
    },
    {
      "type": "stat",
      "title": "Average Temperature (Celsius)",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "temperature_celsius_avg",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "decimals": 2
        }
      }
    },
    {
      "type": "stat",
      "title": "Average Temperature (Fahrenheit)",
      "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "temperature_fahrenheit_avg",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "fahrenheit",
          "decimals": 2
        }
      }
    },
    {
      "type": "stat",
      "title": "Alarm State",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "alarm_state",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "NO ACTIVA" },
                "1": { "text": "ACTIVA" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    }
  ]
}
